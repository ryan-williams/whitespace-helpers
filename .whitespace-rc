
alias ws=strip-whitespace

alias sww=starts-with-whitespace
alias dsww="starts-with-whitespace -v"
alias swwv="starts-with-whitespace -v"

alias eww=ends-with-whitespace
alias deww="ends-with-whitespace -v"
alias ewwv="ends-with-whitespace -v"

alias s2t=spaces-to-tabs

export t=$'\t'
export n=$'\n'

alias nl0="tr '\n' '\0'"
alias ntl="tr '\n' '\0'"
alias null-terminated-lines="tr '\n' '\0'"

alias eb="echo ''"
alias ebl="echo ''"

defn e echo
defn ee echo -e
defn en echo -n
echo_title() {
    echo -n "$*: "
}
export -f echo_title
defn et echo_title
defn ene echo -ne
defn een echo -ne

defn cnls count-leading-spaces

defn ktw rstrip-whitespace
defn rsw rstrip-whitespace

# Trim aliases
alias trm='trim'           # Completely trim both sides, no trailing newline
alias trml='trim -n'       # Trim with trailing newline
